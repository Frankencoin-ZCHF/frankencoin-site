---
import Section from "../components/Layout/Section.astro";
import SectionHeader from "../components/Layout/SectionHeader.astro";
import Base from "../layouts/Base.astro";
import whatIsFrankencoin from "../content/what-is-frankencoin.json";
import Button from "../components/Button/Button.astro";
import FlexStack from "../components/Layout/FlexStack.astro";
---

<Base>
  <Section
    variant="accent"
    width="content"
    align="center"
    pad="lg"
    id="what-is-frankencoin-header"
  >
    <SectionHeader
      title={whatIsFrankencoin.header.title}
      subtitle={whatIsFrankencoin.header.subtitle}
      cta={whatIsFrankencoin.header.cta}
      image={whatIsFrankencoin.header.image}
      imageAlt={whatIsFrankencoin.header.imageAlt}
      maxWidth="6xl"
      size="display"
      align="center"
      padding="xl"
    />
    <FlexStack
      direction="col"
      align="center"
      className="max-w-4xl mx-auto h-64"
      slot="bottom"
    >
      <div class="flex md:flex-row justify-center items-center flex-col gap-20">
        {
          whatIsFrankencoin.features.map((feature) => (
            <div class="flex flex-col items-center gap-5">
              <img
                src={feature.image}
                alt={feature.title}
                width="100"
                height="100"
              />
              <h3 class="ty-title-3 ty-black">{feature.title.toUpperCase()}</h3>
            </div>
          ))
        }
      </div>
    </FlexStack>
  </Section>

  <Section
    id="what-is-frankencoin-introduction"
    margin="md:mt-35 mt-150"
    pad="none"
  >
    <FlexStack direction="col" gap="40px" align="center">
      {
        whatIsFrankencoin.introduction.map((feature) => (
          <div class="flex flex-col gap-4  md:flex-row justify-between">
            <div class="w-full md:w-1/2">
              <h1 class="ty-title-1 ty-black">{feature.title}</h1>
            </div>
            <div class="w-full md:w-1/2">
              <p
                class="ty-body-1"
                set:html={feature.description.replace(/\n/g, "<br>")}
              />
            </div>
          </div>
        ))
      }
    </FlexStack>
  </Section>
</Base>
