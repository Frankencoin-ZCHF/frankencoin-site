---
import Section from "../components/Layout/Section.astro";
import Base from "../layouts/Base.astro";
import token from "../content/token.json";
import ChainContainer from "../components/ChainContainer/ChainContainer.astro";
---

<Base>
  <Section
    id="token-header"
    pad="xs"
    margin="mt-12"
  >
    <div class="text-center mb-8">
      <h1 class="ty-display" style="color: var(--color-black);">
        {token.hero.title}
      </h1>
      <p class="ty-subtitle mt-4" style="color: var(--color-neutral-600);">
        {token.hero.subtitle}
      </p>
    </div>
  </Section>

  <Section
    id="tokens"
    title={token.tokens.title}
    subtitle={token.tokens.subtitle}
    pad="xxs"
    margin="mt-8"
  >
    <ChainContainer tokens={token.tokens.chains} />
  </Section>

  <Section
    id="fps"
    title={token.fps.title}
    subtitle={token.fps.subtitle}
    pad="xxs"
    margin="mt-8"
  >
    <ChainContainer tokens={[token.fps.chain]} />
  </Section>

  <Section
    id="svzchf"
    title={token.svzchf.title}
    subtitle={token.svzchf.subtitle}
    pad="xxs"
    margin="mt-8 mb-8"
  >
    <ChainContainer tokens={token.svzchf.chains} />
  </Section>
</Base>
