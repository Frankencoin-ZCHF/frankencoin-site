---
import Section from "../components/Layout/Section.astro";
import SectionHeader from "../components/Layout/SectionHeader.astro";
import Base from "../layouts/Base.astro";
import { getLanguageFromURL, loadContent } from "../utils/i18n";
import FlexStack from "../components/Layout/FlexStack.astro";
import BadgeContainer, {
  type Option,
} from "../components/BadgeContainer/BadgeContainer.astro";
import StatsContainer from "../components/StatsContainer/StatsContainer.astro";

const currentLang = getLanguageFromURL(Astro.url.pathname);
const governance = await loadContent("governance", currentLang);

async function getFpsInfo() {
  try {
    let response = await fetch(
      "https://api.frankencoin.com/ecosystem/fps/info"
    );
    if (!response.ok) throw new Error("Failed to fetch quote");
    return response.json();
  } catch (error) {
    console.error("Error fetching data:", error);
  }
}

const fpsInfo = await getFpsInfo();

function findStat(id: string) {
  return ((governance.caps ?? []).find((s: any) => s.id === id) || {}) as Option;
}

function formatAmount(n: number) {
  if (typeof n !== "number" || Number.isNaN(n)) return "0.00";
  return n.toFixed(2).replace(/\d{1,3}(?=(\d{3})+(?!\d))/g, "$&'");
}

const s1 = findStat("fpsPrice");
const s2 = findStat("fpsSupply");
const s3 = findStat("fpsMarketCap");
const s4 = findStat("netIncome");
const s5 = findStat("totalReserve");
const s6 = findStat("equityCapital");
const s7 = findStat("minterReserve");

const caps = fpsInfo
  ? [
      {
        label: s1.label ?? "FPS Price",
        value: formatAmount(fpsInfo.token.price ?? 0),
        unit: s1.unit,
        href: s1.href,
      },
      {
        label: s2.label ?? "FPS Supply",
        value: formatAmount(fpsInfo.token.totalSupply ?? 0),
        unit: s2.unit,
        href: s2.href,
      },
      {
        label: s3.label ?? "FPS Market Cap",
        value: formatAmount(fpsInfo.token.marketCap ?? 0),
        unit: s3.unit,
        href: s3.href,
      },
    ]
  : [];

const { unit } = governance.stats_list.find((s: any) => s.id === "netIncome") || {};

const stats = fpsInfo
  ? [
      {
        label: s4.label ?? "Total Reserve",
        value: formatAmount(fpsInfo.reserve.balance ?? 0),
        unit: s4.unit ?? unit,
        href: s4.href,
      },
      {
        label: s5.label ?? "Equity Capital",
        value: formatAmount(fpsInfo.reserve.equity ?? 0),
        unit: s5.unit ?? unit,
        href: s5.href,
      },
      {
        label: s6.label ?? "Minter Reserve",
        value: formatAmount(fpsInfo.reserve.minter ?? 0),
        unit: s6.unit ?? unit,
        href: s6.href,
      },
      {
        label: s7.label ?? "Net income since 2023",
        value: formatAmount(
          (fpsInfo.earnings?.profit ?? 0) - (fpsInfo.earnings?.loss ?? 0)
        ),
        unit: s7.unit ?? unit,
        href: s7.href,
      },
    ]
  : [];
---

<Base>
  <Section variant="accent" align="center" pad="lg" id="governance-header">
    <SectionHeader
      title={governance.header.title}
      subtitle={governance.header.subtitle}
      image={governance.header.image}
      imageAlt={governance.header.imageAlt}
      cta={governance.header.cta}
      padding="xl"
      maxWidth="6xl"
      size="display"
      align="center"
    />
    <FlexStack direction="col" align="center" slot="bottom">
      <div class="md:max-w-[900px] flex flex-col gap-4">
        <BadgeContainer options={caps} />
        <StatsContainer options={stats} />
      </div>
    </FlexStack>
  </Section>
  <Section id="governance-content" className="md:mt-100 mt-160 mb-10" pad="xxs">
    <FlexStack direction="col" gap="40px" align="center">
      {
        governance.sections.map((section) => (
          <div class="flex flex-col md:flex-row justify-between">
            <div class="w-full md:w-1/2">
              <h1 class="ty-title-1 ty-black">{section.title}</h1>
            </div>
            <div class="w-full md:w-1/2">
              <p
                class="ty-body-1"
                set:html={section.description.replace(/\n/g, "<br>")}
              />
            </div>
          </div>
        ))
      }
    </FlexStack>
  </Section>
</Base>
