---
import Footer from "../components/Layout/Footer.astro";
import Header from "../components/Layout/Header.astro";
import "../styles/global.css";
import site from "../content/shared/site.json";
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Basic Meta Tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <title>Frankencoin. The biggest Swiss Franc stablecoin.</title>
    <meta
      name="description"
      content="Frankencoin (ZCHF) is a decentralized, collateral-backed Swiss Franc stablecoin designed for crypto users and DeFi investors seeking stability without compromise."
    />
    <meta
      name="keywords"
      content="Frankencoin, ZCHF, Swiss Franc, stablecoin, DeFi, decentralized finance, cryptocurrency, collateral-backed, blockchain, Ethereum"
    />
    <meta name="author" content="Frankencoin" />
    <meta
      name="robots"
      content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
    />
    <meta name="theme-color" content="#ffffff" />
    <link rel="canonical" href="https://www.frankencoin.com" />

    <!-- Open Graph / Facebook Meta Tags -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.frankencoin.com/" />
    <meta property="og:site_name" content="Frankencoin" />
    <meta property="og:locale" content="en_US" />
    <meta
      property="og:title"
      content="Frankencoin. The biggest Swiss Franc stablecoin."
    />
    <meta
      property="og:description"
      content="Frankencoin (ZCHF) is a decentralized, collateral-backed Swiss Franc stablecoin designed for crypto users and DeFi investors seeking stability without compromise."
    />
    <meta
      property="og:image"
      content="https://cdn.prod.website-files.com/66de9eaf48969ad959519070/66eb34d56d9ebe9fa67d09c0_og_image.webp"
    />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta
      property="og:image:alt"
      content="Frankencoin - Swiss Franc Stablecoin"
    />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:domain" content="frankencoin.com" />
    <meta name="twitter:url" content="https://www.frankencoin.com/" />
    <meta
      name="twitter:title"
      content="Frankencoin. The biggest Swiss Franc stablecoin."
    />
    <meta
      name="twitter:description"
      content="Frankencoin (ZCHF) is a decentralized, collateral-backed Swiss Franc stablecoin designed for crypto users and DeFi investors seeking stability without compromise."
    />
    <meta
      name="twitter:image"
      content="https://cdn.prod.website-files.com/66de9eaf48969ad959519070/66eb34d56d9ebe9fa67d09c0_og_image.webp"
    />
    <meta
      name="twitter:image:alt"
      content="Frankencoin - Swiss Franc Stablecoin"
    />

    <!-- Favicons -->
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="shortcut icon" type="image/x-icon" href="images/favicon.png" />
    <link rel="apple-touch-icon" href="images/webclip.png" />

    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Frankencoin",
        "url": "https://www.frankencoin.com",
        "logo": "https://cdn.prod.website-files.com/66de9eaf48969ad959519070/66eb34d56d9ebe9fa67d09c0_og_image.webp",
        "description": "Frankencoin (ZCHF) is a decentralized, collateral-backed Swiss Franc stablecoin designed for crypto users and DeFi investors seeking stability without compromise.",
        "sameAs": [
          "https://twitter.com/frankencoin",
          "https://github.com/frankencoin"
        ]
      }
    </script>

    <!-- Stylesheets -->
    <link href="css/normalize.css" rel="stylesheet" type="text/css" />
    <link href="css/webflow.css" rel="stylesheet" type="text/css" />
    <link
      href="css/frankencoin-v2.webflow.css"
      rel="stylesheet"
      type="text/css"
    />

    <!-- Scripts -->
    <script type="text/javascript">
      !(function (o, c) {
        var n = c.documentElement,
          t = " w-mod-";
        ((n.className += t + "js"),
          ("ontouchstart" in o ||
            (o.DocumentTouch && c instanceof DocumentTouch)) &&
            (n.className += t + "touch"));
      })(window, document);
    </script>
    <link href="images/favicon.png" rel="shortcut icon" type="image/x-icon" />
    <link href="images/webclip.png" rel="apple-touch-icon" />
    <link href="https://www.frankencoin.com" rel="canonical" />
    <script
      async=""
      src="https://www.googletagmanager.com/gtag/js?id=G-RNM9S018ES"></script>
    <script type="text/javascript">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("set", "developer_id.dZGVlNj", true);
      gtag("config", "G-RNM9S018ES");
    </script>
    <title>{site.site.name}</title>
    <script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" defer
    ></script>

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-RNM9S018ES"
    ></script>
    <script type="text/javascript">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("set", "developer_id.dZGVlNj", true);
      gtag("config", "G-RNM9S018ES");
    </script>
  </head>
  <body
    class="min-h-dvh flex flex-col w-full bg-[var(--color-white)] text-[var(--color-neutral-800)]"
  >
    <Header />

    <main class="w-full flex-1 flex flex-col">
      <slot />
    </main>

    <Footer />
  </body>
</html>
