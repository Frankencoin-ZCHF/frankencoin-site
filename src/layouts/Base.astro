---
import Footer from "../components/Layout/Footer.astro";
import Header from "../components/Layout/Header.astro";
import SEO from "../components/SEO.astro";
import { getLanguageFromURL, loadSharedContent } from "../utils/i18n";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: "website" | "article";
}

const { title, description, image, type } = Astro.props;
const currentLang = getLanguageFromURL(Astro.url.pathname);
const site = await loadSharedContent("site", currentLang);
---

<!doctype html>
<html lang={currentLang}>
  <head>
    <!-- Basic Meta Tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#0A2540" />

    <!-- SEO Component -->
    <SEO title={title} description={description} image={image} type={type} />

    <!-- Favicons -->
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/images/webclip.png" />
    <link rel="manifest" href="/manifest.json" />

    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": site.site.name,
      "url": site.site.url,
      "logo": new URL(site.site.image, site.site.url).href,
      "description": site.site.description,
      "sameAs": [
        "https://x.com/frankencoinzchf",
        "https://github.com/Frankencoin-ZCHF",
        "https://t.me/frankencoinzchf"
      ],
      "contactPoint": {
        "@type": "ContactPoint",
        "contactType": site.contact.type,
        "email": site.contact.email
      }
    })} />

    <!-- Alpine.js -->
    <script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" defer></script>

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-RNM9S018ES"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("set", "developer_id.dZGVlNj", true);
      gtag("config", "G-RNM9S018ES");
    </script>
  </head>
  <body
    class="min-h-dvh flex flex-col w-full bg-[var(--color-white)] text-[var(--color-neutral-800)]"
  >
    <Header />

    <main class="w-full flex-1 flex flex-col">
      <slot />
    </main>

    <Footer />
  </body>
</html>
