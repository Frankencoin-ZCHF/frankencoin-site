---
interface Props {
  href?: string;
  target?: string;
  class?: string;
}

const { href, target = "_blank", class: className = "" } = Astro.props;
const Component = href ? "a" : "div";
---

<Component
  href={href}
  target={target}
  class={`
    w-full max-w-[800px]
    h-auto max-h-none
    bg-[url('../images/Vector-Compressify.io-1.webp')] bg-left-top bg-cover bg-no-repeat
    pt-[60px] pb-[60px]
    flex flex-col justify-center items-center
    gap-y-2 no-underline
    overflow-hidden
    ${className}
  `}
>
  <slot />
</Component>
