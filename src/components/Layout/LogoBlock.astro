---
interface Props {
  href?: string;
  target?: string;
  class?: string;
}

const { href, target = "_blank", class: className = "" } = Astro.props;
const Component = href ? "a" : "div";
---

<Component
  href={href}
  target={target}
  class={`
    sm:max-w-[640px] lg:max-w-[800px] 
    h-auto min-h-[180px] md:min-h-[220px] md:max-h-full max-h-[600px]
    bg-[url('../images/Vector-Compressify.io-1.webp')] bg-center md:bg-left-top bg-cover bg-no-repeat
    px-[clamp(16px,5vw,60px)] py-[clamp(24px,8vw,60px)]
    flex flex-col justify-center items-center
    gap-y-2 md:gap-y-3 no-underline
    overflow-hidden
    ${className}
  `}
>
  <slot />
</Component>
