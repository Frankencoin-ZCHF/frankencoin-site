---
import SocialLinksBar from "../SocialLinksBar.astro";

const year = new Date().getFullYear();
---

<footer
  class="w-full bottom-0 bg-[var(--color-brand-anthracite)] border-t border-[var(--color-neutral-700)]"
>
  <div
    class="mx-auto max-w-6xl px-[var(--spacing-l)] py-12"
  >
    <!-- 4 Column Layout -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-12">
      <!-- Column 1: About -->
      <div class="flex flex-col gap-4">
        <h3 class="text-[var(--color-white)] text-[var(--font-size-base)] font-semibold">
          About
        </h3>
        <nav class="flex flex-col gap-3">
          <a
            href="/what-is-frankencoin"
            class="text-[var(--color-neutral-300)] hover:text-[var(--color-white)] text-[var(--font-size-sm)] transition-colors"
          >
            What is Frankencoin
          </a>
          <a
            href="/use-cases"
            class="text-[var(--color-neutral-300)] hover:text-[var(--color-white)] text-[var(--font-size-sm)] transition-colors"
          >
            Use Cases
          </a>
          <a
            href="/ecosystem"
            class="text-[var(--color-neutral-300)] hover:text-[var(--color-white)] text-[var(--font-size-sm)] transition-colors"
          >
            Ecosystem
          </a>
        </nav>
      </div>

      <!-- Column 2: Token -->
      <div class="flex flex-col gap-4">
        <h3 class="text-[var(--color-white)] text-[var(--font-size-base)] font-semibold">
          Token
        </h3>
        <nav class="flex flex-col gap-3">
          <a
            href="/token"
            class="text-[var(--color-neutral-300)] hover:text-[var(--color-white)] text-[var(--font-size-sm)] transition-colors"
          >
            Token Info
          </a>
          <a
            href="/fps"
            class="text-[var(--color-neutral-300)] hover:text-[var(--color-white)] text-[var(--font-size-sm)] transition-colors"
          >
            FPS
          </a>
          <a
            href="https://defillama.com/protocol/frankencoin"
            target="_blank"
            rel="noopener noreferrer"
            class="text-[var(--color-neutral-300)] hover:text-[var(--color-white)] text-[var(--font-size-sm)] transition-colors"
          >
            DeFiLlama
          </a>
          <a
            href="https://www.coingecko.com/en/coins/frankencoin"
            target="_blank"
            rel="noopener noreferrer"
            class="text-[var(--color-neutral-300)] hover:text-[var(--color-white)] text-[var(--font-size-sm)] transition-colors"
          >
            CoinGecko
          </a>
        </nav>
      </div>

      <!-- Column 3: Developers -->
      <div class="flex flex-col gap-4">
        <h3 class="text-[var(--color-white)] text-[var(--font-size-base)] font-semibold">
          Developers
        </h3>
        <nav class="flex flex-col gap-3">
          <a
            href="https://docs.frankencoin.com"
            target="_blank"
            rel="noopener noreferrer"
            class="text-[var(--color-neutral-300)] hover:text-[var(--color-white)] text-[var(--font-size-sm)] transition-colors"
          >
            Documentation
          </a>
          <a
            href="https://api.frankencoin.com"
            target="_blank"
            rel="noopener noreferrer"
            class="text-[var(--color-neutral-300)] hover:text-[var(--color-white)] text-[var(--font-size-sm)] transition-colors"
          >
            API
          </a>
          <a
            href="https://app.frankencoin.com/thesis-frankencoin.pdf"
            target="_blank"
            rel="noopener noreferrer"
            class="text-[var(--color-neutral-300)] hover:text-[var(--color-white)] text-[var(--font-size-sm)] transition-colors"
          >
            Thesis Paper
          </a>
          <a
            href="https://github.com/Frankencoin-ZCHF"
            target="_blank"
            rel="noopener noreferrer"
            class="text-[var(--color-neutral-300)] hover:text-[var(--color-white)] text-[var(--font-size-sm)] transition-colors"
          >
            GitHub
          </a>
        </nav>
      </div>

      <!-- Column 4: Community -->
      <div class="flex flex-col gap-4">
        <h3 class="text-[var(--color-white)] text-[var(--font-size-base)] font-semibold">
          Community
        </h3>
        <nav class="flex flex-col gap-3">
          <a
            href="https://x.com/frankencoinzchf"
            target="_blank"
            rel="noopener noreferrer"
            class="text-[var(--color-neutral-300)] hover:text-[var(--color-white)] text-[var(--font-size-sm)] transition-colors"
          >
            X (Twitter)
          </a>
          <a
            href="https://t.me/frankencoinzchf"
            target="_blank"
            rel="noopener noreferrer"
            class="text-[var(--color-neutral-300)] hover:text-[var(--color-white)] text-[var(--font-size-sm)] transition-colors"
          >
            Telegram
          </a>
          <a
            href="https://app.frankencoin.com"
            target="_blank"
            rel="noopener noreferrer"
            class="text-[var(--color-neutral-300)] hover:text-[var(--color-white)] text-[var(--font-size-sm)] transition-colors"
          >
            Web App
          </a>
        </nav>
      </div>
    </div>

    <!-- Social icons bar and copyright -->
    <div class="flex flex-col items-center gap-6 pt-8 border-t border-[var(--color-neutral-700)]">
      <SocialLinksBar theme={"light"} />
      <p class="text-[var(--color-neutral-400)] text-[var(--font-size-xs)]">
        Â© {year} Frankencoin Association. All rights reserved.
      </p>
    </div>
  </div>
</footer>
