---
import { fetchYouTubeData } from "../../utils/fetchYouTubeData";

interface Props {
  videos: string[];
}

const { videos } = Astro.props;

// Fetch YouTube data for all videos at build time
const videosWithMetadata = await Promise.all(
  videos.map(async (url) => {
    const videoData = await fetchYouTubeData(url);
    return videoData || {
      title: "Video",
      description: "",
      thumbnail: "",
      author: "",
      url,
      publishedDate: "",
      videoId: "",
    };
  })
);

// Sort by published date (newest first), items without dates go to the end
const sortedVideos = videosWithMetadata.sort((a, b) => {
  // If neither has a date, keep original order
  if (!a.publishedDate && !b.publishedDate) return 0;
  // If only a is missing date, push it to the end
  if (!a.publishedDate) return 1;
  // If only b is missing date, push it to the end
  if (!b.publishedDate) return -1;
  // Both have dates, sort by newest first
  const dateA = new Date(a.publishedDate);
  const dateB = new Date(b.publishedDate);
  return dateB.getTime() - dateA.getTime();
});
---

<div
  x-data="{
    currentIndex: 0,
    videos: [],
    itemsPerPage: 3,
    get totalPages() {
      return Math.ceil(this.videos.length / this.itemsPerPage);
    },
    get visibleVideos() {
      const start = this.currentIndex * this.itemsPerPage;
      return this.videos.slice(start, start + this.itemsPerPage);
    },
    next() {
      this.currentIndex = (this.currentIndex + 1) % this.totalPages;
    },
    prev() {
      this.currentIndex = (this.currentIndex - 1 + this.totalPages) % this.totalPages;
    },
    init() {
      this.videos = JSON.parse(this.$el.dataset.videos);
    }
  }"
  x-init="init()"
  data-videos={JSON.stringify(sortedVideos)}
  class="relative"
>
  <!-- Carousel Container -->
  <div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <template x-for="video in visibleVideos" :key="video.url">
        <a
          :href="video.url"
          target="_blank"
          rel="noopener noreferrer"
          class="block bg-white rounded-lg shadow-md hover:shadow-lg transition h-full flex flex-col"
          x-transition:enter="transition ease-out duration-500"
          x-transition:enter-start="opacity-0 transform scale-95"
          x-transition:enter-end="opacity-100 transform scale-100"
        >
          <!-- Video Thumbnail -->
          <div class="relative overflow-hidden rounded-t-lg">
            <img
              :src="video.thumbnail"
              :alt="video.title"
              class="w-full aspect-video object-cover"
              loading="lazy"
            />
            <!-- Play button overlay on hover only -->
            <div class="absolute inset-0 bg-black bg-opacity-0 hover:bg-opacity-30 transition flex items-center justify-center opacity-0 hover:opacity-100">
              <div class="bg-red-600 rounded-full p-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M8 5v14l11-7z"/>
                </svg>
              </div>
            </div>
          </div>

          <!-- Video Info -->
          <div class="p-6 flex-1 flex flex-col">
            <p class="ty-small text-[var(--color-brand-titan-gray)] mb-2">
              <span x-text="video.author"></span>
              <template x-if="video.publishedDate">
                <span>
                  <span> â€¢ </span>
                  <span x-text="video.publishedDate"></span>
                </span>
              </template>
            </p>
            <h3 class="ty-big-2 mb-3 line-clamp-2" x-text="video.title"></h3>
            <p class="ty-body-2 text-[var(--color-brand-titan-gray)] line-clamp-3" x-text="video.description"></p>
          </div>
        </a>
      </template>
    </div>
  </div>

  <!-- Navigation Controls -->
  <div class="flex justify-center items-center gap-4 mt-8">
    <button
      @click="prev()"
      class="p-3 rounded-full bg-[var(--color-brand-deep-blue)] text-white hover:bg-[var(--color-brand-swiss)] transition-colors"
      aria-label="Previous videos"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
    </button>

    <!-- Pagination Dots -->
    <div class="flex gap-2">
      <template x-for="page in totalPages" :key="page">
        <button
          @click="currentIndex = page - 1"
          class="w-3 h-3 rounded-full transition-colors"
          :class="currentIndex === page - 1 ? 'bg-[var(--color-brand-deep-blue)]' : 'bg-gray-300'"
          :aria-label="`Go to page ${page}`"
        ></button>
      </template>
    </div>

    <button
      @click="next()"
      class="p-3 rounded-full bg-[var(--color-brand-deep-blue)] text-white hover:bg-[var(--color-brand-swiss)] transition-colors"
      aria-label="Next videos"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </button>
  </div>
</div>
