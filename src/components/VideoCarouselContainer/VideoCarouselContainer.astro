---
import { fetchYouTubeData } from "../../utils/fetchYouTubeData";
import { loadGlobalSharedContent } from "../../utils/i18n";

interface Props {
  videos: string[];
}

const { videos } = Astro.props;

const media = await loadGlobalSharedContent("media");

// Fetch YouTube data for all videos at build time
// Manual metadata can override specific fields if provided
const videosWithMetadata = await Promise.all(
  videos.map(async (url) => {
    // Try to fetch YouTube data
    const videoData = await fetchYouTubeData(url);

    const defaultData = videoData || {
      title: "Video",
      description: "",
      thumbnail: "",
      author: "",
      url,
      publishedDate: "",
      videoId: "",
    };

    // Check if manual override exists for this URL
    if (media.videoMetadata && media.videoMetadata[url]) {
      console.log(`Applying manual video metadata for: ${url}`);
      const manual = media.videoMetadata[url];

      // Merge: manual metadata overrides fetched data for any fields that are provided
      return {
        ...defaultData,
        ...Object.fromEntries(
          Object.entries(manual).filter(([_, value]) => value !== "" && value !== null && value !== undefined)
        )
      };
    }

    return defaultData;
  })
);

// Sort by published date (newest first), items without dates go to the end
const sortedVideos = videosWithMetadata.sort((a, b) => {
  // If neither has a date, keep original order
  if (!a.publishedDate && !b.publishedDate) return 0;
  // If only a is missing date, push it to the end
  if (!a.publishedDate) return 1;
  // If only b is missing date, push it to the end
  if (!b.publishedDate) return -1;
  // Both have dates, sort by newest first
  const dateA = new Date(a.publishedDate);
  const dateB = new Date(b.publishedDate);
  return dateB.getTime() - dateA.getTime();
});
---

<div
  x-data="{
    currentIndex: 0,
    videos: [],
    itemsPerPage: 3,
    isTransitioning: false,
    enableTransition: true,
    translateX: 0,
    get totalPages() {
      return Math.ceil(this.videos.length / this.itemsPerPage);
    },
    getPageVideos(pageIndex) {
      const start = pageIndex * this.itemsPerPage;
      return this.videos.slice(start, start + this.itemsPerPage);
    },
    next() {
      if (this.isTransitioning) return;
      this.isTransitioning = true;
      this.enableTransition = true;
      this.translateX = -100;
      setTimeout(() => {
        this.enableTransition = false;
        this.currentIndex = (this.currentIndex + 1) % this.totalPages;
        this.translateX = 0;
        setTimeout(() => {
          this.isTransitioning = false;
        }, 50);
      }, 700);
    },
    prev() {
      if (this.isTransitioning) return;
      this.isTransitioning = true;
      this.enableTransition = true;
      this.translateX = 100;
      setTimeout(() => {
        this.enableTransition = false;
        this.currentIndex = (this.currentIndex - 1 + this.totalPages) % this.totalPages;
        this.translateX = 0;
        setTimeout(() => {
          this.isTransitioning = false;
        }, 50);
      }, 700);
    },
    init() {
      this.videos = JSON.parse(this.$el.dataset.videos);
    }
  }"
  x-init="init()"
  data-videos={JSON.stringify(sortedVideos)}
  class="relative"
>
  <!-- Carousel Container -->
  <div class="relative pt-2 pb-20">
    <div
      class="flex overflow-x-hidden"
      :class="{ 'transition-transform duration-700 ease-in-out': enableTransition }"
      :style="`transform: translateX(${translateX}%)`"
    >
      <!-- Current page -->
      <div class="w-full flex-shrink-0">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 pb-4">
          <template x-for="video in getPageVideos(currentIndex)" :key="video.url">
        <a
          :href="video.url"
          target="_blank"
          rel="noopener noreferrer"
          class="block bg-white rounded-lg shadow-md hover:shadow-lg transition h-full flex flex-col"
        >
          <!-- Video Thumbnail -->
          <div class="relative overflow-hidden rounded-t-lg">
            <img
              :src="video.thumbnail"
              :alt="video.title"
              class="w-full aspect-video object-cover"
              loading="lazy"
            />
            <!-- Play button overlay on hover only -->
            <div class="absolute inset-0 bg-black bg-opacity-0 hover:bg-opacity-30 transition flex items-center justify-center opacity-0 hover:opacity-100">
              <div class="bg-red-600 rounded-full p-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M8 5v14l11-7z"/>
                </svg>
              </div>
            </div>
          </div>

          <!-- Video Info -->
          <div class="p-6 flex-1 flex flex-col">
            <p class="ty-small text-[var(--color-brand-titan-gray)] mb-2">
              <span x-text="video.author"></span>
              <template x-if="video.publishedDate">
                <span>
                  <span> • </span>
                  <span x-text="video.publishedDate"></span>
                </span>
              </template>
            </p>
            <h3 class="ty-big-2 mb-3 line-clamp-2" x-text="video.title"></h3>
            <p class="ty-body-2 text-[var(--color-brand-titan-gray)] line-clamp-3" x-text="video.description"></p>
          </div>
        </a>
          </template>
        </div>
      </div>

      <!-- Next page (for left slide) -->
      <div class="w-full flex-shrink-0" x-show="isTransitioning && translateX < 0">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 pb-4">
          <template x-for="video in getPageVideos((currentIndex + 1) % totalPages)" :key="video.url">
            <a
              :href="video.url"
              target="_blank"
              rel="noopener noreferrer"
              class="block bg-white rounded-lg shadow-md hover:shadow-lg transition h-full flex flex-col"
            >
              <div class="relative overflow-hidden rounded-t-lg">
                <img
                  :src="video.thumbnail"
                  :alt="video.title"
                  class="w-full aspect-video object-cover"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-black bg-opacity-0 hover:bg-opacity-30 transition flex items-center justify-center opacity-0 hover:opacity-100">
                  <div class="bg-red-600 rounded-full p-3">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M8 5v14l11-7z"/>
                    </svg>
                  </div>
                </div>
              </div>
              <div class="p-6 flex-1 flex flex-col">
                <p class="ty-small text-[var(--color-brand-titan-gray)] mb-2">
                  <span x-text="video.author"></span>
                  <template x-if="video.publishedDate">
                    <span>
                      <span> • </span>
                      <span x-text="video.publishedDate"></span>
                    </span>
                  </template>
                </p>
                <h3 class="ty-big-2 mb-3 line-clamp-2" x-text="video.title"></h3>
                <p class="ty-body-2 text-[var(--color-brand-titan-gray)] line-clamp-3" x-text="video.description"></p>
              </div>
            </a>
          </template>
        </div>
      </div>

      <!-- Previous page (for right slide) - positioned before current -->
      <div class="w-full flex-shrink-0 -order-1" x-show="isTransitioning && translateX > 0">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 pb-4">
          <template x-for="video in getPageVideos((currentIndex - 1 + totalPages) % totalPages)" :key="video.url">
            <a
              :href="video.url"
              target="_blank"
              rel="noopener noreferrer"
              class="block bg-white rounded-lg shadow-md hover:shadow-lg transition h-full flex flex-col"
            >
              <div class="relative overflow-hidden rounded-t-lg">
                <img
                  :src="video.thumbnail"
                  :alt="video.title"
                  class="w-full aspect-video object-cover"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-black bg-opacity-0 hover:bg-opacity-30 transition flex items-center justify-center opacity-0 hover:opacity-100">
                  <div class="bg-red-600 rounded-full p-3">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M8 5v14l11-7z"/>
                    </svg>
                  </div>
                </div>
              </div>
              <div class="p-6 flex-1 flex flex-col">
                <p class="ty-small text-[var(--color-brand-titan-gray)] mb-2">
                  <span x-text="video.author"></span>
                  <template x-if="video.publishedDate">
                    <span>
                      <span> • </span>
                      <span x-text="video.publishedDate"></span>
                    </span>
                  </template>
                </p>
                <h3 class="ty-big-2 mb-3 line-clamp-2" x-text="video.title"></h3>
                <p class="ty-body-2 text-[var(--color-brand-titan-gray)] line-clamp-3" x-text="video.description"></p>
              </div>
            </a>
          </template>
        </div>
      </div>
    </div>
  </div>

  <!-- Navigation Controls -->
  <div class="flex justify-center items-center gap-1 mt-1">
    <button
      @click="prev()"
      class="p-3 rounded-full bg-[var(--color-brand-deep-blue)] text-white hover:bg-[var(--color-brand-swiss)] transition-colors"
      aria-label="Previous videos"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
    </button>

    <!-- Pagination Dots -->
    <div class="flex gap-2">
      <template x-for="page in totalPages" :key="page">
        <button
          @click="currentIndex = page - 1"
          class="w-3 h-3 rounded-full transition-colors"
          :class="currentIndex === page - 1 ? 'bg-[var(--color-brand-deep-blue)]' : 'bg-gray-300'"
          :aria-label="`Go to page ${page}`"
        ></button>
      </template>
    </div>

    <button
      @click="next()"
      class="p-3 rounded-full bg-[var(--color-brand-deep-blue)] text-white hover:bg-[var(--color-brand-swiss)] transition-colors"
      aria-label="Next videos"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </button>
  </div>
</div>
