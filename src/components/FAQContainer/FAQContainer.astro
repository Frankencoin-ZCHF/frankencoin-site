---
interface Question {
  question: string;
  answer: string;
}

interface Category {
  category: string;
  questions: Question[];
}

interface Props {
  faqs: {
    categories: Category[];
  };
}

const { faqs } = Astro.props;

// Convert markdown links to HTML
function convertMarkdownLinks(text: string): string {
  // Replace [text](url) with <a href="url">text</a>
  return text.replace(/\[([^\]]+)\]\(([^)]+)\)/g, '<a href="$2" class="text-[var(--color-brand-deep-blue)] hover:underline font-bold" target="_blank" rel="noopener noreferrer">$1</a>');
}
---

<div class="space-y-12">
  {faqs.categories.map((category) => (
    <div>
      <!-- Category Header -->
      <h3 class="ty-big-2 text-[var(--color-brand-deep-blue)] mb-6">{category.category}</h3>

      <!-- Questions for this category -->
      <div class="divide-y divide-gray-200 border border-gray-200 rounded-3xl px-8 py-4">
        {category.questions.map((faq) => (
          <div x-data="{ open: false }" class="py-5">
            <!-- Header -->
            <button
              class="w-full flex justify-between items-center text-left font-medium text-gray-900 hover:text-black focus:outline-none"
              x-on:click="open = !open"
              :aria-expanded="open.toString()"
            >
              <h4 class="ty-body-1 ty-black">{faq.question}</h4>
              <h4
                aria-hidden="true"
                class="text-3xl ty-light leading-none inline-block transform-gpu transition-transform duration-200 [transform-style:preserve-3d]"
                :class="open ? 'rotate-45' : ''"
              >
                +
              </h4>
            </button>

            <!-- Content -->
            <div
              x-show="open"
              x-transition:enter="transition-all ease-out duration-500"
              x-transition:enter-start="opacity-0 -translate-y-4"
              x-transition:enter-end="opacity-100 translate-y-0"
              x-transition:leave="transition-all ease-in duration-300"
              x-transition:leave-start="opacity-100 translate-y-0"
              x-transition:leave-end="opacity-0 -translate-y-4"
              class="overflow-hidden"
              style="transform-origin: top;"
            >
              <div class="mt-4 text-gray-700 text-sm leading-relaxed">
                <p set:html={convertMarkdownLinks(faq.answer)} class="ty-body-1" />
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  ))}
</div>