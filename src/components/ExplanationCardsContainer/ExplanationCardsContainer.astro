---
import { getLanguageFromURL, loadSharedContent } from "../../utils/i18n";

const currentLang = getLanguageFromURL(Astro.url.pathname);
const ui = await loadSharedContent("ui", currentLang);

interface ExplanationCard {
  title: string;
  description: string;
  link?: string;
}

interface Props {
  cards: ExplanationCard[];
}

const { cards } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto mt-12">
  {cards.map((card) => (
    <div class="space-y-4">
      <h3 class="ty-big-2 text-[var(--color-brand-deep-blue)]">{card.title}</h3>
      <p class="ty-body-1">{card.description}</p>
      {card.link && (
        <a
          href={card.link}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-[var(--color-brand-deep-blue)] hover:underline font-bold ty-body-1"
        >
          <span>{ui.buttons.learnMore}</span>
          <img src="images/Arrow.svg" loading="lazy" alt="" class="w-3 h-3" />
        </a>
      )}
    </div>
  ))}
</div>
