---
import { getLanguageFromURL, loadContent, loadGlobalSharedContent } from "../../utils/i18n";
import { fetchOgData } from "../../utils/fetchOgData";
import { fetchYouTubeData } from "../../utils/fetchYouTubeData";

const currentLang = getLanguageFromURL(Astro.url.pathname);
const media = await loadGlobalSharedContent("media");
const index = await loadContent("index", currentLang);

interface Props {
  articles: string[];
  videos: string[];
}

const { articles, videos } = Astro.props;

// Fetch and process articles
const articlesWithMetadata = await Promise.all(
  articles.map(async (url) => {
    const ogData = await fetchOgData(url);

    const defaultData = ogData || {
      title: "Article",
      description: "",
      image: "",
      siteName: new URL(url).hostname,
      url,
      publishedDate: "",
    };

    // Check if manual override exists
    if (media.articleMetadata && media.articleMetadata[url]) {
      const manual = media.articleMetadata[url];
      return {
        ...defaultData,
        ...Object.fromEntries(
          Object.entries(manual).filter(([_, value]) => value !== "" && value !== null && value !== undefined)
        ),
        type: "article" as const,
      };
    }

    return { ...defaultData, type: "article" as const };
  })
);

// Fetch and process videos
const videosWithMetadata = await Promise.all(
  videos.map(async (url) => {
    const videoData = await fetchYouTubeData(url);

    const defaultData = videoData || {
      title: "Video",
      description: "",
      thumbnail: "",
      author: "",
      url,
      publishedDate: "",
      videoId: "",
    };

    // Check if manual override exists
    if (media.videoMetadata && media.videoMetadata[url]) {
      const manual = media.videoMetadata[url];
      return {
        ...defaultData,
        ...Object.fromEntries(
          Object.entries(manual).filter(([_, value]) => value !== "" && value !== null && value !== undefined)
        ),
        type: "video" as const,
      };
    }

    return { ...defaultData, type: "video" as const };
  })
);

// Normalize video data to match article structure for unified rendering
const normalizedVideos = videosWithMetadata.map((v) => ({
  title: v.title,
  description: v.description,
  image: v.thumbnail,
  siteName: v.author,
  url: v.url,
  publishedDate: v.publishedDate,
  type: "video" as const,
}));

// Merge and sort all items by date
const allItems = [...articlesWithMetadata, ...normalizedVideos].sort((a, b) => {
  if (!a.publishedDate && !b.publishedDate) return 0;
  if (!a.publishedDate) return 1;
  if (!b.publishedDate) return -1;
  const dateA = new Date(a.publishedDate);
  const dateB = new Date(b.publishedDate);
  return dateB.getTime() - dateA.getTime();
});
---

<div
  x-data="{
    currentIndex: 0,
    items: [],
    itemsPerPage: 3,
    isTransitioning: false,
    enableTransition: true,
    translateX: 0,
    get totalPages() {
      return Math.ceil(this.items.length / this.itemsPerPage);
    },
    getPageItems(pageIndex) {
      const start = pageIndex * this.itemsPerPage;
      return this.items.slice(start, start + this.itemsPerPage);
    },
    next() {
      if (this.isTransitioning) return;
      this.isTransitioning = true;
      this.enableTransition = true;
      this.translateX = -100;
      setTimeout(() => {
        this.enableTransition = false;
        this.currentIndex = (this.currentIndex + 1) % this.totalPages;
        this.translateX = 0;
        setTimeout(() => {
          this.isTransitioning = false;
        }, 50);
      }, 700);
    },
    prev() {
      if (this.isTransitioning) return;
      this.isTransitioning = true;
      this.enableTransition = true;
      this.translateX = 100;
      setTimeout(() => {
        this.enableTransition = false;
        this.currentIndex = (this.currentIndex - 1 + this.totalPages) % this.totalPages;
        this.translateX = 0;
        setTimeout(() => {
          this.isTransitioning = false;
        }, 50);
      }, 700);
    },
    init() {
      this.items = JSON.parse(this.$el.dataset.items);
    }
  }"
  x-init="init()"
  data-items={JSON.stringify(allItems)}
  class="relative"
>
  <!-- Carousel Container -->
  <div class="relative pt-2 pb-20">
    <div
      class="flex overflow-x-hidden"
      :class="{ 'transition-transform duration-700 ease-in-out': enableTransition }"
      :style="`transform: translateX(${translateX}%)`"
    >
      <!-- Current page -->
      <div class="w-full flex-shrink-0">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 pb-4">
          <template x-for="item in getPageItems(currentIndex)" :key="item.url">
            <a
              :href="item.url"
              target="_blank"
              rel="noopener noreferrer"
              class="block bg-white rounded-lg shadow-md hover:shadow-lg transition h-full flex flex-col"
            >
              <!-- Image/Thumbnail -->
              <div class="relative overflow-hidden rounded-t-lg" x-data="{ imageError: false }">
                <template x-if="item.image && !imageError">
                  <img
                    :src="item.image"
                    :alt="item.title"
                    class="w-full aspect-video object-cover"
                    loading="lazy"
                    @error="imageError = true"
                  />
                </template>
                <template x-if="!item.image || imageError">
                  <div class="w-full aspect-video bg-gradient-to-br from-[var(--color-brand-deep-blue)] to-[var(--color-brand-swiss)] flex items-center justify-center">
                    <template x-if="item.type === 'video'">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-white opacity-50" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M8 5v14l11-7z"/>
                      </svg>
                    </template>
                    <template x-if="item.type === 'article'">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-white opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                      </svg>
                    </template>
                  </div>
                </template>
                <!-- Play button overlay for videos -->
                <template x-if="item.type === 'video'">
                  <div class="absolute inset-0 bg-black bg-opacity-0 hover:bg-opacity-30 transition flex items-center justify-center opacity-0 hover:opacity-100">
                    <div class="bg-red-600 rounded-full p-3">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M8 5v14l11-7z"/>
                      </svg>
                    </div>
                  </div>
                </template>
                <!-- Type badge -->
                <div class="absolute top-2 left-2">
                  <span
                    class="px-2 py-1 text-xs font-bold rounded"
                    :class="item.type === 'video' ? 'bg-red-600 text-white' : 'bg-[var(--color-brand-deep-blue)] text-white'"
                    x-text="item.type === 'video' ? 'Video' : 'Article'"
                  ></span>
                </div>
              </div>

              <!-- Info -->
              <div class="p-6 flex-1 flex flex-col">
                <p class="ty-small text-[var(--color-brand-titan-gray)] mb-2">
                  <span x-text="item.siteName"></span>
                  <template x-if="item.publishedDate">
                    <span>
                      <span> &bull; </span>
                      <span x-text="item.publishedDate"></span>
                    </span>
                  </template>
                </p>
                <h3 class="ty-big-2 mb-3 line-clamp-2" x-text="item.title"></h3>
                <p class="ty-body-2 text-[var(--color-brand-titan-gray)] line-clamp-3" x-text="item.description"></p>
              </div>
            </a>
          </template>
        </div>
      </div>

      <!-- Next page (for left slide) -->
      <div class="w-full flex-shrink-0" x-show="isTransitioning && translateX < 0">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 pb-4">
          <template x-for="item in getPageItems((currentIndex + 1) % totalPages)" :key="item.url">
            <a
              :href="item.url"
              target="_blank"
              rel="noopener noreferrer"
              class="block bg-white rounded-lg shadow-md hover:shadow-lg transition h-full flex flex-col"
            >
              <div class="relative overflow-hidden rounded-t-lg" x-data="{ imageError: false }">
                <template x-if="item.image && !imageError">
                  <img
                    :src="item.image"
                    :alt="item.title"
                    class="w-full aspect-video object-cover"
                    loading="lazy"
                    @error="imageError = true"
                  />
                </template>
                <template x-if="!item.image || imageError">
                  <div class="w-full aspect-video bg-gradient-to-br from-[var(--color-brand-deep-blue)] to-[var(--color-brand-swiss)] flex items-center justify-center">
                    <template x-if="item.type === 'video'">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-white opacity-50" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M8 5v14l11-7z"/>
                      </svg>
                    </template>
                    <template x-if="item.type === 'article'">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-white opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                      </svg>
                    </template>
                  </div>
                </template>
                <template x-if="item.type === 'video'">
                  <div class="absolute inset-0 bg-black bg-opacity-0 hover:bg-opacity-30 transition flex items-center justify-center opacity-0 hover:opacity-100">
                    <div class="bg-red-600 rounded-full p-3">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M8 5v14l11-7z"/>
                      </svg>
                    </div>
                  </div>
                </template>
                <div class="absolute top-2 left-2">
                  <span
                    class="px-2 py-1 text-xs font-bold rounded"
                    :class="item.type === 'video' ? 'bg-red-600 text-white' : 'bg-[var(--color-brand-deep-blue)] text-white'"
                    x-text="item.type === 'video' ? 'Video' : 'Article'"
                  ></span>
                </div>
              </div>
              <div class="p-6 flex-1 flex flex-col">
                <p class="ty-small text-[var(--color-brand-titan-gray)] mb-2">
                  <span x-text="item.siteName"></span>
                  <template x-if="item.publishedDate">
                    <span>
                      <span> &bull; </span>
                      <span x-text="item.publishedDate"></span>
                    </span>
                  </template>
                </p>
                <h3 class="ty-big-2 mb-3 line-clamp-2" x-text="item.title"></h3>
                <p class="ty-body-2 text-[var(--color-brand-titan-gray)] line-clamp-3" x-text="item.description"></p>
              </div>
            </a>
          </template>
        </div>
      </div>

      <!-- Previous page (for right slide) -->
      <div class="w-full flex-shrink-0 -order-1" x-show="isTransitioning && translateX > 0">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 pb-4">
          <template x-for="item in getPageItems((currentIndex - 1 + totalPages) % totalPages)" :key="item.url">
            <a
              :href="item.url"
              target="_blank"
              rel="noopener noreferrer"
              class="block bg-white rounded-lg shadow-md hover:shadow-lg transition h-full flex flex-col"
            >
              <div class="relative overflow-hidden rounded-t-lg" x-data="{ imageError: false }">
                <template x-if="item.image && !imageError">
                  <img
                    :src="item.image"
                    :alt="item.title"
                    class="w-full aspect-video object-cover"
                    loading="lazy"
                    @error="imageError = true"
                  />
                </template>
                <template x-if="!item.image || imageError">
                  <div class="w-full aspect-video bg-gradient-to-br from-[var(--color-brand-deep-blue)] to-[var(--color-brand-swiss)] flex items-center justify-center">
                    <template x-if="item.type === 'video'">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-white opacity-50" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M8 5v14l11-7z"/>
                      </svg>
                    </template>
                    <template x-if="item.type === 'article'">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-white opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                      </svg>
                    </template>
                  </div>
                </template>
                <template x-if="item.type === 'video'">
                  <div class="absolute inset-0 bg-black bg-opacity-0 hover:bg-opacity-30 transition flex items-center justify-center opacity-0 hover:opacity-100">
                    <div class="bg-red-600 rounded-full p-3">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M8 5v14l11-7z"/>
                      </svg>
                    </div>
                  </div>
                </template>
                <div class="absolute top-2 left-2">
                  <span
                    class="px-2 py-1 text-xs font-bold rounded"
                    :class="item.type === 'video' ? 'bg-red-600 text-white' : 'bg-[var(--color-brand-deep-blue)] text-white'"
                    x-text="item.type === 'video' ? 'Video' : 'Article'"
                  ></span>
                </div>
              </div>
              <div class="p-6 flex-1 flex flex-col">
                <p class="ty-small text-[var(--color-brand-titan-gray)] mb-2">
                  <span x-text="item.siteName"></span>
                  <template x-if="item.publishedDate">
                    <span>
                      <span> &bull; </span>
                      <span x-text="item.publishedDate"></span>
                    </span>
                  </template>
                </p>
                <h3 class="ty-big-2 mb-3 line-clamp-2" x-text="item.title"></h3>
                <p class="ty-body-2 text-[var(--color-brand-titan-gray)] line-clamp-3" x-text="item.description"></p>
              </div>
            </a>
          </template>
        </div>
      </div>
    </div>
  </div>

  <!-- Navigation Controls -->
  <div class="flex justify-center items-center gap-2 mt-1">
    <button
      @click="prev()"
      class="p-3 rounded-full bg-[var(--color-brand-deep-blue)] text-white hover:bg-[var(--color-brand-swiss)] transition-colors"
      aria-label="Previous items"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
    </button>

    <!-- Pagination Dots -->
    <div class="flex gap-2">
      <template x-for="page in totalPages" :key="page">
        <button
          @click="currentIndex = page - 1"
          class="w-5 h-5 rounded-full transition-colors"
          :class="currentIndex === page - 1 ? 'bg-[var(--color-brand-deep-blue)]' : 'bg-gray-300'"
          :aria-label="`Go to page ${page}`"
        ></button>
      </template>
    </div>

    <button
      @click="next()"
      class="p-3 rounded-full bg-[var(--color-brand-deep-blue)] text-white hover:bg-[var(--color-brand-swiss)] transition-colors"
      aria-label="Next items"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </button>
  </div>
</div>

<div class="mt-12 text-center">
  <p class="ty-body-1 text-[var(--color-brand-titan-gray)]">
    {index.in_the_media.contact_text} <a href="mailto:media@frankencoin.com" class="text-[var(--color-brand-deep-blue)] hover:underline font-bold">media@frankencoin.com</a>
  </p>
</div>
