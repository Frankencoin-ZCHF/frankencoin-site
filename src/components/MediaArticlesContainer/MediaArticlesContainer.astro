---
import { fetchOgData } from "../../utils/fetchOgData";

interface Props {
  articles: string[];
}

const { articles } = Astro.props;

// Fetch Open Graph data for all articles at build time
const articlesWithMetadata = await Promise.all(
  articles.map(async (url) => {
    const ogData = await fetchOgData(url);
    return ogData || {
      title: "Article",
      description: "",
      image: "",
      siteName: new URL(url).hostname,
      url,
      publishedDate: "",
    };
  })
);

// Sort by published date (newest first), items without dates go to the end
const sortedArticles = articlesWithMetadata.sort((a, b) => {
  // If neither has a date, keep original order
  if (!a.publishedDate && !b.publishedDate) return 0;
  // If only a is missing date, push it to the end
  if (!a.publishedDate) return 1;
  // If only b is missing date, push it to the end
  if (!b.publishedDate) return -1;
  // Both have dates, sort by newest first
  const dateA = new Date(a.publishedDate);
  const dateB = new Date(b.publishedDate);
  return dateB.getTime() - dateA.getTime();
});
---

<div
  x-data="{
    currentIndex: 0,
    articles: [],
    itemsPerPage: 3,
    get totalPages() {
      return Math.ceil(this.articles.length / this.itemsPerPage);
    },
    get visibleArticles() {
      const start = this.currentIndex * this.itemsPerPage;
      return this.articles.slice(start, start + this.itemsPerPage);
    },
    next() {
      this.currentIndex = (this.currentIndex + 1) % this.totalPages;
    },
    prev() {
      this.currentIndex = (this.currentIndex - 1 + this.totalPages) % this.totalPages;
    },
    init() {
      this.articles = JSON.parse(this.$el.dataset.articles);
    }
  }"
  x-init="init()"
  data-articles={JSON.stringify(sortedArticles)}
  class="relative"
>
  <!-- Carousel Container -->
  <div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <template x-for="article in visibleArticles" :key="article.url">
        <a
          :href="article.url"
          target="_blank"
          rel="noopener noreferrer"
          class="block bg-white rounded-lg shadow-md hover:shadow-lg transition p-6 flex flex-col justify-between h-full"
          x-transition:enter="transition ease-out duration-500"
          x-transition:enter-start="opacity-0 transform scale-95"
          x-transition:enter-end="opacity-100 transform scale-100"
        >
          <!-- Image if available -->
          <div class="mb-4">
            <template x-if="article.image">
              <img
                :src="article.image"
                :alt="article.title"
                class="w-full h-48 object-cover rounded-lg"
              />
            </template>
            <template x-if="!article.image">
              <div class="w-full h-48 bg-gradient-to-br from-[var(--color-brand-deep-blue)] to-[var(--color-brand-swiss)] rounded-lg flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-white opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                </svg>
              </div>
            </template>
          </div>

          <div class="flex-1 flex flex-col justify-between">
            <div>
              <p class="ty-small text-[var(--color-brand-titan-gray)] mb-2">
                <span x-text="article.siteName"></span>
                <template x-if="article.publishedDate">
                  <span>
                    <span> â€¢ </span>
                    <span x-text="article.publishedDate"></span>
                  </span>
                </template>
              </p>
              <h3 class="ty-big-2 mb-3 line-clamp-2" x-text="article.title"></h3>
              <p class="ty-body-2 text-[var(--color-brand-titan-gray)] line-clamp-3" x-text="article.description"></p>
            </div>

            <div class="flex items-center gap-2 text-[var(--color-brand-deep-blue)] ty-regular font-bold mt-4">
              <span>Read more</span>
              <img src="images/Arrow.svg" loading="lazy" alt="" class="w-3 h-3" />
            </div>
          </div>
        </a>
      </template>
    </div>
  </div>

  <!-- Navigation Controls -->
  <div class="flex justify-center items-center gap-4 mt-8">
    <button
      @click="prev()"
      class="p-3 rounded-full bg-[var(--color-brand-deep-blue)] text-white hover:bg-[var(--color-brand-swiss)] transition-colors"
      aria-label="Previous articles"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
    </button>

    <!-- Pagination Dots -->
    <div class="flex gap-2">
      <template x-for="page in totalPages" :key="page">
        <button
          @click="currentIndex = page - 1"
          class="w-3 h-3 rounded-full transition-colors"
          :class="currentIndex === page - 1 ? 'bg-[var(--color-brand-deep-blue)]' : 'bg-gray-300'"
          :aria-label="`Go to page ${page}`"
        ></button>
      </template>
    </div>

    <button
      @click="next()"
      class="p-3 rounded-full bg-[var(--color-brand-deep-blue)] text-white hover:bg-[var(--color-brand-swiss)] transition-colors"
      aria-label="Next articles"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </button>
  </div>
</div>

<div class="mt-12 text-center">
  <p class="ty-body-1 text-[var(--color-brand-titan-gray)]">
    Would you like to report about Frankencoin? Get in touch using <a href="mailto:media@frankencoin.com" class="text-[var(--color-brand-deep-blue)] hover:underline font-bold">media@frankencoin.com</a>
  </p>
</div>
